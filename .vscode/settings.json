{
	"files.associations": {
		"**/Makefile*": "makefile"
	},
	"conventionalCommits.scopes": [
		"cspell",
		"docker",
		"zsh",
		"nvim"
	],
	"yaml.schemas": {
		"https://taskfile.dev/schema.json": [
			"**/.task/*.yml"
		]
	},
	"markdown.styles": [
		"https://use.fontawesome.com/releases/v5.7.1/css/all.css"
	],
	"conventionalCommits.gitmoji": false,
	"conventionalCommits.autoCommit": false
}
