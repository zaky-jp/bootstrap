function log_notice(){
  # echo with green
  echo
  print -P "%F{green}$*%f"
}

function log_fatal(){
  # echo with red to fd2
  print -P "%F{red}$*%f" 1>&2
  exit 1
}

function log_warn(){
  # echo with red to fd2
  print -P "%F{red}$*%f" 1>&2
}

function log_info(){
  # echo with indent
  print "==> $*"
}

